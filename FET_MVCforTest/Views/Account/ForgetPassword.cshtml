@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="ForgetPassword" method="post">
    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

    <div class="form-group">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your registered email" />
        <span asp-validation-for="Email" class="field-validation-error"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Reset Password
    </button>

    <div class="auth-footer">
        <p>
            Remember your password? <a asp-action="SignIn" class="auth-link">Sign In</a>
        </p>
    </div>
</form>