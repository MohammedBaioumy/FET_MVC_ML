@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="SignUp" method="post">
    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

    <div class="form-group">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
        <span asp-validation-for="FirstName" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
        <span asp-validation-for="LastName" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserName" class="form-label">Username</label>
        <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
        <span asp-validation-for="UserName" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
        <button type="button" class="password-toggle">
            <i class="far fa-eye"></i>
        </button>
        <span asp-validation-for="Password" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
        <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
    </div>

    <div class="checkbox-container">
        <input asp-for="IsAgree" type="checkbox" class="checkbox-input" id="agreeTerms" />
        <label for="agreeTerms" class="checkbox-label">I agree to the <a href="#" class="auth-link">Terms of Service</a> and <a href="#" class="auth-link">Privacy Policy</a></label>
        <span asp-validation-for="IsAgree" class="field-validation-error"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Create Account
    </button>

    <div class="auth-footer">
        <p>
            Already have an account? <a asp-action="SignIn" class="auth-link">Sign In</a>
        </p>
    </div>
</form>