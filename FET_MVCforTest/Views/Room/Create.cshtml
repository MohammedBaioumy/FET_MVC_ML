@{
    ViewBag.Title = "Create New Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Room";
}

@model RoomViewModel

<style>
    /* أنماط الصفحة المعدلة */
    .create-room-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
    }

    .create-room-card {
        border-radius: 12px;
        border: none;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        background-color: #ffffff;
    }

    body.dark-mode .create-room-card {
        background-color: #2d2d2d;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
    }

    .create-room-header {
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: white;
        padding: 1.5rem;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    body.dark-mode .create-room-header {
        background: linear-gradient(135deg, #2980b9, #1a1a1a);
    }

    .create-room-title {
        font-weight: 700;
        margin: 0;
        font-size: 1.8rem;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    body.dark-mode .form-label {
        color: #e0e0e0;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
    }

    body.dark-mode .form-control {
        background-color: #3a3a3a;
        border-color: #4a4a4a;
        color: #f8f9fa;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
    }

    body.dark-mode .form-control:focus {
        border-color: #2980b9;
        box-shadow: 0 0 0 0.25rem rgba(41, 128, 185, 0.25);
    }

    .btn-submit {
        background-color: #2ecc71;
        border: none;
        padding: 0.75rem 2rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border-radius: 8px;
    }

    body.dark-mode .btn-submit {
        background-color: #27ae60;
    }

    .btn-submit:hover {
        background-color: #27ae60;
        transform: translateY(-2px);
    }

    body.dark-mode .btn-submit:hover {
        background-color: #219653;
    }

    .btn-cancel {
        background-color: #95a5a6;
        border: none;
        padding: 0.75rem 2rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border-radius: 8px;
    }

    body.dark-mode .btn-cancel {
        background-color: #7f8c8d;
    }

    .btn-cancel:hover {
        background-color: #7f8c8d;
        transform: translateY(-2px);
    }

    body.dark-mode .btn-cancel:hover {
        background-color: #6c7a7d;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .back-arrow {
        font-size: 2rem;
        color: #495057;
        transition: all 0.3s ease;
    }

    body.dark-mode .back-arrow {
        color: #e0e0e0;
    }

    .back-arrow:hover {
        color: #3498db;
        transform: translateX(-5px);
    }

    body.dark-mode .back-arrow:hover {
        color: #2980b9;
    }

    /* تأثيرات الحركة */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fadeInUp 0.6s ease-out forwards;
    }
</style>

<div class="create-room-container animate-fade-in">
    <div class="mb-4">
       @*  <a href="@Url.Action("Index")" class="back-arrow" style="text-decoration: none;">
            <i class="bi bi-arrow-left"></i>
        </a> *@
    </div>

    <div class="create-room-card">
        <div class="create-room-header">
            <h1 class="create-room-title">
                <i class="bi bi-door-open me-2"></i>Add New Room
            </h1>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div class="mb-4">
                    <label asp-for="Name" class="form-label">Room Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter room name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Capacity" class="form-label">Capacity</label>
                    <input asp-for="Capacity" class="form-control" placeholder="Enter capacity" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-5">
                    <button type="submit" class="btn btn-submit">
                        <i class="bi bi-check-circle me-2"></i>Create
                    </button>
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // إضافة تأثيرات للعناصر عند التحميل
        document.addEventListener('DOMContentLoaded', function() {
            const formElements = document.querySelectorAll('.form-control');
            formElements.forEach((el, index) => {
                el.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
}