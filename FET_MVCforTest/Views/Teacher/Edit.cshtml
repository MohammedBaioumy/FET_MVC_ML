@{
    ViewData["Title"] = "Edit Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TeacherViewModel

<style>
    /* Page styles */
    .edit-teacher-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
    }

    .edit-teacher-card {
        border-radius: 12px;
        border: none;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        background-color: #ffffff;
    }

    body.dark-mode .edit-teacher-card {
        background-color: #2d2d2d;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
    }

    .edit-teacher-header {
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        padding: 1.5rem;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    body.dark-mode .edit-teacher-header {
        background: linear-gradient(135deg, #1a5276, #154360);
    }

    .edit-teacher-title {
        font-weight: 700;
        margin: 0;
        font-size: 1.8rem;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    body.dark-mode .form-label {
        color: #e0e0e0;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
    }

    body.dark-mode .form-control {
        background-color: #3a3a3a;
        border-color: #4a4a4a;
        color: #f8f9fa;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
    }

    body.dark-mode .form-control:focus {
        border-color: #1a5276;
        box-shadow: 0 0 0 0.25rem rgba(26, 82, 118, 0.25);
    }

    .btn-update {
        background-color: #3498db;
        border: none;
        padding: 0.75rem 2rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border-radius: 8px;
        color: white;
    }

    body.dark-mode .btn-update {
        background-color: #1a5276;
    }

    .btn-update:hover {
        background-color: #2980b9;
        transform: translateY(-2px);
    }

    body.dark-mode .btn-update:hover {
        background-color: #154360;
    }

    .btn-cancel {
        background-color: #95a5a6;
        border: none;
        padding: 0.75rem 2rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border-radius: 8px;
        color: white;
    }

    body.dark-mode .btn-cancel {
        background-color: #7f8c8d;
    }

    .btn-cancel:hover {
        background-color: #7f8c8d;
        transform: translateY(-2px);
    }

    body.dark-mode .btn-cancel:hover {
        background-color: #6c7a7d;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    /* Animation effects */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fadeInUp 0.6s ease-out forwards;
    }
</style>

<div class="edit-teacher-container animate-fade-in">
    <div class="edit-teacher-card">
        <div class="edit-teacher-header">
            <h1 class="edit-teacher-title">
                <i class="bi bi-person-badge me-2"></i>Edit Teacher
            </h1>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="Name" class="form-label">Teacher Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter teacher name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="MaxHoursPerDay" class="form-label">Max Hours Per Day</label>
                    <input asp-for="MaxHoursPerDay" type="number" class="form-control" placeholder="Enter max hours per day" />
                    <span asp-validation-for="MaxHoursPerDay" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="MaxHoursPerWeek" class="form-label">Max Hours Per Week</label>
                    <input asp-for="MaxHoursPerWeek" type="number" class="form-control" placeholder="Enter max hours per week" />
                    <span asp-validation-for="MaxHoursPerWeek" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-5">
                    <button type="submit" class="btn btn-update">
                        <i class="bi bi-check-circle me-2"></i>Update
                    </button>
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add effects to elements when loading
        document.addEventListener('DOMContentLoaded', function() {
            const formElements = document.querySelectorAll('.form-control');
            formElements.forEach((el, index) => {
                el.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
}