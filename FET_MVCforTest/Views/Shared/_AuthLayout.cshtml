<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - College Portal</title>

    <!-- External Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Main CSS -->
    <link href="~/css/auth-styles.css" rel="stylesheet" />

    <!-- Critical CSS -->
    <style>
        .auth-preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #2c3e50, #1a252f);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .auth-preloader-spinner {
            width: 50px;
            height: 50px;
            border: 5px solid rgba(255,255,255,0.3);
            border-radius: 50%;
            border-top-color: #3498db;
            animation: spin 1s ease-in-out infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>
    <!-- Preloader -->
    <div class="auth-preloader">
        <div class="auth-preloader-spinner"></div>
        <p class="mt-3 text-white">Loading Secure Portal...</p>
    </div>

    <!-- Main Content -->
    <div class="auth-container">
        <div class="auth-card animate__animated animate__fadeInUp">
            <button class="theme-btn" id="themeToggle" aria-label="Toggle dark mode">
                <i class="fas fa-moon"></i>
            </button>

            <div class="auth-header">
                <div class="logo-container">
                    <div class="logo-circle animate__animated animate__pulse animate__infinite">
                        <svg class="auth-logo" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                            <path fill="currentColor" d="M12,3L1,9L12,15L21,10.09V17H23V9M5,13.18V17.18L12,21L19,17.18V13.18L12,17L5,13.18Z" />
                        </svg>
                    </div>
                    <div class="logo-particles">
                        <div class="particle"></div>
                        <div class="particle"></div>
                        <div class="particle"></div>
                    </div>
                </div>
                <h1 class="auth-title animate__animated animate__fadeIn">@ViewData["Title"]</h1>
                <p class="auth-subtitle animate__animated animate__fadeIn animate__delay-1s">College Management System</p>
            </div>

            @RenderBody()
        </div>
    </div>

    <!-- Background Elements -->
    <div class="academic-bg" aria-hidden="true"></div>
    <div class="floating-books" aria-hidden="true"></div>
    <div class="particle-network" aria-hidden="true"></div>

    <!-- JavaScript -->
    <script src="~/js/auth-interactions.js"></script>
    <script src="~/js/auth-animations.js"></script>

    <!-- Remove Preloader -->
    <script>
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.querySelector('.auth-preloader').style.opacity = '0';
                setTimeout(function() {
                    document.querySelector('.auth-preloader').style.display = 'none';
                }, 500);
            }, 1000);
        });
    </script>
</body>
</html>